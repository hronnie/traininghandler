<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security.xsd">


	<http>
		<intercept-url pattern="/index.htm*" access="ROLE_ADMIN" />
		<intercept-url pattern="/gatherTraineeInfo*" access="ROLE_ADMIN" />
		<intercept-url pattern="/gatherTraineeInfo/success*" access="ROLE_ADMIN" />
		<intercept-url pattern="/manageTraining/importTraining*" access="ROLE_ADMIN" />
		<intercept-url pattern="/manageTraining*" access="ROLE_ADMIN" />
		<intercept-url pattern="/manageTraining/showEligibleTrainees*" access="ROLE_ADMIN" />
		<intercept-url pattern="/trainingType*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/address*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/completedTraining*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/gatherTraineeInfo*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/manageTraining/getEligibleTraineesByTrainingTypeId*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype/create*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype/get*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype/getAll*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype/update*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/trainingtype/delete*" access="ROLE_ADMIN" />
		<intercept-url pattern="/rest/user*" access="ROLE_ADMIN" />
		<intercept-url pattern="/login.jsp" access="ROLE_GUEST" />
		<intercept-url pattern="/*" access="ROLE_ADMIN" />
		
		<form-login 
			login-page="/login.jsp" 
			default-target-url="/index.htm"
			authentication-failure-url="/login.jsp?error=true" />
		
		<logout logout-success-url="/login.jsp" delete-cookies="JSESSIONID"/>

		<anonymous username="guest" granted-authority="ROLE_GUEST" />
		
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="SELECT 
										  userName AS username, 
										  password, 
										  isEnabled AS enabled 
										FROM 
										  User 
										WHERE 
										  userName = ? 
										AND 
										  isEnabled = 1"
				
				authorities-by-username-query="
											SELECT 
											 u.userName AS username, 
											 r.roleName AS authorities 
											FROM 
											 User AS u 
											LEFT JOIN UserRole AS ur on (u.userId = ur.userId)
											LEFT JOIN Role AS r on (ur.roleId = r.roleId)
											WHERE 
											 username = ?;" />
            <password-encoder ref="encoder" />											 
		</authentication-provider>
	</authentication-manager>
	
	<beans:bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
        <beans:constructor-arg name="strength" value="10" />
    </beans:bean>
	
	<beans:bean id="dataSource"
          class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">

        <beans:property name="driverClass" value="com.mysql.jdbc.Driver" />
        <beans:property name="jdbcUrl"
                  value="jdbc:mysql://localhost/traininghandler" />

        <beans:property name="properties">
            <beans:props>
                <beans:prop key="com.mchange.v2.c3p0.management.ManagementCoordinator">com.mchange.v2.c3p0.management.NullManagementCoordinator</beans:prop>
                <beans:prop key="user">training</beans:prop>
                <beans:prop key="password">rootpass</beans:prop>
                <beans:prop key="autoReconnect">true</beans:prop>
                <beans:prop key="autoReconnectForPools">true</beans:prop>
            </beans:props>
        </beans:property>
    </beans:bean>

</beans:beans>
